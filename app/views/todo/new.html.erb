<div class="navbar bg-info text-light">
    
        <h1 ><a href="/todo" class="nav-link ">Mero Task</a></h1>
</div>



<%= form_for :todo, url:{ action: :create } do |f| %>
  <div class = "container my-4">
    <div class = "row ">
      <div class = " d-flex justify-content-center ">
        <div class = "col-md-4">
          <div class = "form-group border p-4 rounded shadow">

            <%= f.label "Task", :class =>"form-label"%>
            <%= f.text_field :description, :class =>"form-control", required: true %>
            <%= f.submit "Add Task", :class =>"btn btn-outline-primary my-3" %>
            <a href="/todo" class="btn btn-danger">Cancel</a>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>

